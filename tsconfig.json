{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "DOM",
      "ESNext",
      "DOM.Iterable"
    ],
    "types": [
      "@xiaohuohumax/bookmark-script/client"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "#/*": [
        "./*"
      ]
    },
    "strict": true,
    "declaration": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true
  },
  "include": [
    "src",
    "types",
    "utils"
  ]
}